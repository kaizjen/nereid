{
  "name": "nereid",
  "version": "0.0.1",
  "description": "An Electron-based web browser",
  "main": "src/js/main.js",
  "scripts": {
    "start": "electron .",
    "chr:build": "cd src/browser && svbuild && cd ../..",
    "chr:start": "cd src/browser && svbuild && cd ../.. && npm start",
    "ts:build": "tsc",
    "ts:start": "tsc && npm start",
    "webui:build": "cd src/browser/webui && svbuild && cd ../../..",
    "webui:start": "cd src/browser/webui && svbuild && cd ../../.. && npm start",
    "build": "npm run ts:build && npm run chr:build && npm run webui:build",
    "dev": "npm run build && electron .",
    "dev-inspect": "npm run build && electron . --inspect",
    "localize": "node src/i18n/transform.js",
    "begin": "npm install && node svlc/hack_empty_svelte_styles.js && cd src/browser/nereid && npm install && svbuild && cd ../../.. && npm run build && npm run localize"
  },
  "private": true,
  "author": "wheezard",
  "dependencies": {
    "argv-parse": "^1.0.1",
    "electron": "^19.0.8",
    "electron-fetch": "^1.7.4",
    "fs-extra": "^10.0.1",
    "fuse.js": "^6.6.1",
    "i18next": "^21.8.3",
    "json5": "^2.2.1",
    "runtype-check": "^1.0.3",
    "svelte": "^3.46.4"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "svbuild": "^0.0.5",
    "typescript": "^4.7.3",
    "yaml": "^1.10.2"
  }
}
